<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        style="?attr/toolbarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/koreanExamBackButton"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_back"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/koreanExamTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/korean"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/toolBar"/>

    <ImageView
        android:id="@+id/koreanExamImage1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/peach"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        android:background="@drawable/shape_image"/>

    <EditText
        android:id="@+id/koreanExamEditText1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/koreanExamImage1"
        app:layout_constraintTop_toTopOf="@id/koreanExamImage1"
        app:layout_constraintBottom_toBottomOf="@id/koreanExamImage1"
        android:layout_marginStart="45dp"
        android:hint="@string/hint"
        android:gravity="center"
        android:background="@drawable/shape_rectangle"/>

    <ImageView
        android:id="@+id/koreanExamImage2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pine_apple"
        app:layout_constraintTop_toBottomOf="@id/koreanExamImage1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        android:background="@drawable/shape_image"/>

    <EditText
        android:id="@+id/koreanExamEditText2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/koreanExamImage2"
        app:layout_constraintTop_toTopOf="@id/koreanExamImage2"
        app:layout_constraintBottom_toBottomOf="@id/koreanExamImage2"
        android:layout_marginStart="45dp"
        android:hint="@string/hint"
        android:gravity="center"
        android:background="@drawable/shape_rectangle"/>

    <ImageView
        android:id="@+id/koreanExamImage3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/banana"
        app:layout_constraintTop_toBottomOf="@id/koreanExamImage2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        android:background="@drawable/shape_image"/>

    <EditText
        android:id="@+id/koreanExamEditText3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/koreanExamImage3"
        app:layout_constraintTop_toTopOf="@id/koreanExamImage3"
        app:layout_constraintBottom_toBottomOf="@id/koreanExamImage3"
        android:layout_marginStart="45dp"
        android:hint="@string/hint"
        android:gravity="center"
        android:background="@drawable/shape_rectangle"/>

    <Button
        android:id="@+id/resultButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:text="@string/correctConfirm"
        android:textSize="30sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>